<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>Generate Events</title>
	<% include meta-data %>
</head>

<body>
	<% include header %>
	<main>
		<div class="container">
			<div class="row">
				<form action="/events/generate" method="post" class="col s12" enctype="multipart/form-data">
					<div class="row">
						<div class="file-field input-field col s12">
							<div class="btn">
								<span>JSON File</span>
								<input type="file" name="eventFile" id="eventFile" required>
							</div>
							<div class="file-path-wrapper">
								<input class="file-path validate" type="text" placeholder="Upload JSON file with specified structure">
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col s4 l3">
							<button class="btn waves-effect waves-light" type="submit" name="action" id="submit">Generate
								<i class="material-icons right">send</i>
							</button>
						</div>
					</div>

				</form>
				<br><br><br>
				<form action="/events/upload" method="post" class="col s12" enctype="multipart/form-data">
					<div class="row">
						<div class="file-field input-field col s12">
							<div class="btn">
								<span>Images</span>
								<input type="file" name="eventImages" id="eventImage" multiple required>
							</div>
							<div class="file-path-wrapper">
								<input class="file-path validate" type="text" placeholder="Upload one or more Image files">
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col s4 l3">
							<button class="btn waves-effect waves-light" type="submit" name="action" id="submit">Add
								<i class="material-icons right">send</i>
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</main>
	<% include footer %>
	<script>
		document.querySelectorAll('a[href="/events/generate"]').forEach((ele) => {
			ele.parentNode.classList.toggle('active');
		});
	</script>
</body>

</html>