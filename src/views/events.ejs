<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <% include meta-data %>
    <script src="/js/materialize.js"></script>
    <script>
        function toast(msg, classes) {
            M.toast({html: msg, classes, position: 'top' });
        }
        </script>
    <title>Events</title>
</head>

<body>
    <% include header %>
    <div class="container">
        <% if (success.length) { %>
        <div class="row green">
            <script>toast('<%=success%>', 'green rounded');</script>
        </div>
        <% } %>
        <% if (responseMsgSuccess.length) { %>
            <script>toast('<%=responseMsgSuccess%>', 'green rounded');</script>
            <% } %>
        <% if (responseMsgFailure.length) { %>
            <script>toast('<%=responseMsgFailure%>', 'red rounded');</script>
            <% } %>
        <h1 class="center-align card-panel">Events</h1>
        <div class="row card-panel">
            <%liveEvents.forEach((ele) => {%>
            <div class="col s12 m5 l5">
                <div class="card brown lighten-1 hoverable">
                    <div class="card-content white-text">
                        <span class="card-title"><%=ele.eventName%></span>
                        <p><%=ele.intro%></p>
                    </div>
                    <div class="card-action">
                        <% const request = requests.find((request) => { return request.event === ele.event; });%>
                        <% if (request && request.isAllowed && !request.hasStarted) { %>
                        <a href="<%=ele.link%>">Take Quiz</a>
                        <% } else if (request && request.isAllowed && request.hasStarted) { %>
                        <a>You have taken quiz</a>
                        <% } else {%>
                        <a class="btn-floating btn-large waves-effect waves-light tooltipped red events"  data-tooltip="<%if(!request){%>Click to participate in <%=ele.eventName%><%} else {%>Not Interested <%}%>" event="<%=ele.event%>">
                            <i class="material-icons">
                                <% if (request) { %>
                                remove
                                <% } else { %>
                                add
                                <%}%>
                            </i>
                            </a>
                        <%}%>
                    </div>
                </div>
            </div>
            <div class="col s1"></div>
            <%});%>
        </div>
    </div>
    <% include footer %>
    <script src="/js/eventsRequestAjax.js"></script>
</body>

</html>