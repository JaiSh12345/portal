<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <% include meta-data %>
    <title>Events</title>
</head>

<body>
    <% include header %>
    <div class="container">
        <h1 class="center-align">Events</h1>
        <%=success %>
        <div class="row">
            <%data.forEach((ele) => {%>
            <div class="col s5">
                <div class="card brown lighten-1 hoverable">
                    <div class="card-content white-text">
                        <span class="card-title"><%=ele.eventName%></span>
                        <p><%=ele.intro%></p>
                    </div>
                    <div class="card-action">
                        <a class="btn-floating btn-large waves-effect waves-light red events" data="<%=ele.event%>">
                            <i class="material-icons">
                                <% let result = ele.requests.find((request) => { return request.email === user.email; })%>
                                <% if (result) { %>
                                remove
                                <% } else { %>
                                add
                                <%}%>
                            </i>
                        </a>
                        <%if (result && result.isAllowed) {%>
                                <a href="<%=ele.link%>">Take Quiz</a>
                                <%}%>
                    </div>
                </div>
            </div>
            <div class="col s1"></div>
            <%});%>
        </div>
    </div>
    <% include footer %>
    <script src="/js/eventsRequestAjax.js"></script>
</body>

</html>