<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Results</title>
    <% include meta-data %>
</head>
<body>
    <%include header%>
    <div class="container">
        <% let flag = true; %>
        <br><br>
        <ul class="collapsible">
        <% result.forEach((ele) => { %>
                <% flag = false;  %>
                <li>
                    <div class="collapsible-header"><%=ele._id.eventName%> - Prelims</div>
                    <div class="collapsible-body">
                            <div class="row">
                
                                    <div class="col s12">
                                        <div class="row">
                                            <div class="col s12">
                                                <h4><%=ele._id.eventName%></h4>
                                            </div>
                                            <div class="col s12">
                                                <table>
                                                    <thead>
                                                        <tr>
                                                            <th>Name</th>
                                                            <th>College</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% ele.fields.forEach((r) => { %>
                                                            <tr>
                                                            <td><%-r.name%></td>
                                                            <td><%-r.college%></td>
                                                        </tr>
                                                            <%});%>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div class="col s12"></div>
                                        </div>
                                    </div>
                                    
                            </div>
                    </div>
        </li>
             <%});%>
        </ul>
            <% if (flag) {%>
                <h3>Results are not available yet.</h3>
                <% } %>
    </div>
    <% include footer %>   
    <script>
    document.addEventListener('DOMContentLoaded', function() {
    var elems = document.querySelectorAll('.collapsible');
    var instances = M.Collapsible.init(elems);
  });
    
  document.querySelectorAll('a[href="/events/results"]').forEach((ele) => {ele.parentNode.classList.toggle('active');});
    </script> 
</body>
</html>